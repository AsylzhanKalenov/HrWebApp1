@model User

<form asp-action="EditRegis" asp-controller="Auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <p>
            <img src="../img/regicon.png" class="img-fluid">
            Редактирование данных
        </p>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Password" />
        <input type="hidden" asp-for="RoleId" />
        <input type="hidden" asp-for="CompanyId" />
        <input type="hidden" asp-for="PositionId" />
        <input type="hidden" asp-for="Defaultpass" />
        <input type="hidden" asp-for="Status" />
        <table class="registr">
            <tr>
                <td><p>Ваша Фамилия:</p></td>
                <td>
                    <input type="text" asp-for="Surname" />
                    <span asp-validation-for="Surname"></span>
                </td>
            </tr>
            <tr>
                <td><p>Ваше Имя:</p></td>
                <td>
                    <input type="text" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </td>
            </tr>
            <tr>
                <td><p>Ваше Отчество:</p></td>
                <td>
                    <input type="text" asp-for="Lastname" />
                    <span asp-validation-for="Lastname"></span>
                </td>
            </tr>
            <tr>
                <td><p>Пол:</p></td>
                <td>
                    <input style="width: 15px !important;" type="radio" asp-for="Male" value="true" />
                    <label asp-for="Male">Муж</label>
                    <input style="width: 15px !important;" type="radio" asp-for="Male" value="false" />
                    <label asp-for="Male">Жен</label>
                    <span asp-validation-for="Male"></span>
                </td>
            </tr>
            <tr>
                <td><p>Дата рождение:</p></td>
                <td>
                    <input type="date" asp-for="BirthDate" />
                    <span asp-validation-for="BirthDate"></span>
                </td>
            </tr>
            <tr>
                <td><p>Телефон:</p></td>
                <td>
                    <input type="text" asp-for="Phone" />
                    <span asp-validation-for="Phone"></span>
                </td>
            </tr>
            <tr>
                <td><p>Ваш E-Mail:</p></td>
                <td>
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input style="width: 135px !important;" type="submit" value="Редактировать" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </div>
</form>